#!/bin/bash

#[ -x ~/.xinitrc ] && ~/.xinitrc

declare -a startonce=(
  "sxhkd -m -1"

  "compton --config $HOME/.config/compton/compton.conf"
  "$HOME/.config/polybar/launch.sh"

  "nm-applet"
  "autokey-gtk"

  "nitrogen --restore"

  "xmodmap $HOME/.Xmodmap"

  "/usr/lib/gnome-settings-daemon/gsd-xsettings"

  # Clipboard history
  "greenclip daemon"
  "nextcloud"

  # Not sure why this is necessary
  "xrdb -load $HOME/.Xresources"
  "xautolock -detectsleep -locker 'betterlockscreen -l'"
)

declare -a nousr1=(
  sxhkd xautolock greenclip dropbox nm-applet nitrogen compton autokey-gtk onboard
)

for cmd in "${startonce[@]}" ; do
  split=($cmd)
  basecmd="$(basename ${split[0]})"
  if ! pgrep -x "${basecmd}" >/dev/null ; then
    # xautolock doesn't handle usr1 properly
    # if [[ ! "${nousr1[@]}" =~ "${basecmd}" ]] ; then
    #  pkill -USR1 -x "${basecmd}"
    # fi
 # else
   # echo "Command: '${cmd}'"
    ${cmd} &
  fi
done

dunst &

xsetroot -cursor_name left_ptr &

#padding
bspc config top_padding        0
bspc config bottom_padding     0
bspc config left_padding       0
bspc config right_padding      0
bspc config border_width       0
bspc config window_gap         20

# Borders and gaps
bspc config borderless_monocle true
bspc config gapless_monocle true

# Border colors
bspc config normal_border_color "#484848"
bspc config focused_border_color "#FFFFFF"
#B0BEC5

#presel color
bspc config presel_feedback_color "#B0BEC5"

# Focusing behavior
bspc config focus_follows_pointer true
#bspc config history_aware_focus true
#bspc config focus_by_distance true

# Misc
bspc config split_ratio 0.62

# Split to right
bspc config initial_polarity second_child

#mouse options for floating windows
bspc config pointer_modifier mod4
bspc config pointer_action1 move
bspc config pointer_action2 resize_side

# Multihead behavior
bspc config remove_disabled_monitors true
bspc config remove_unplugged_monitors true

$(dirname $0)/configure-monitors
# Application-specific configuration

# Float the pulse audio volume control dialog
bspc rule -a Pavucontrol state=floating
bspc rule -a Gimp state=floating
