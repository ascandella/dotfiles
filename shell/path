addtopath() {
  if [ -d $1 ] && [[ ":$PATH:" != *":$1:"* ]] ; then
    export PATH="$PATH:$1"
  fi
}

#
# Node.js
#

NODE_PATH=/usr/local/lib/node
if [ -d $NODE_PATH ] ; then
  export NODE_PATH
fi

addtopath "/usr/local/share/npm/bin"

#
# Add ~/bin if it exists and isn't in the path already
#

addtopath "$HOME/bin"

addtopath "/usr/local/opt/go/libexec/bin"

# Undefine the helper function
unset -f addtopath
